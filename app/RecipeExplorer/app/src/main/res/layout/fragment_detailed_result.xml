<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/recipeImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_launcher_foreground"/>

    <TextView
        android:id="@+id/recipeTitle"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_toEndOf="@id/recipeImage"
        android:layout_alignTop="@id/recipeImage"
        android:layout_margin="16dp"
        android:gravity="center"
        android:textSize="30sp"
        android:background="@color/green"
        android:text="@string/default_title"/>

    <ImageView
        android:id="@+id/preparationTimeIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/recipeImage"
        android:layout_margin="16dp"
        android:src="@drawable/ic_launcher_foreground"/>

    <TextView
        android:id="@+id/recipePreparationTime"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_below="@id/recipeImage"
        android:layout_toEndOf="@id/preparationTimeIcon"
        android:layout_margin="16dp"
        android:gravity="center"
        android:textSize="16sp"
        android:text="@string/default_preparation_time"/>

    <ImageView
        android:id="@+id/caloriesIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/recipeImage"
        android:layout_toStartOf="@id/calories"
        android:layout_margin="16dp"
        android:src="@drawable/ic_launcher_foreground"/>

    <TextView
        android:id="@+id/calories"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_below="@id/recipeImage"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:gravity="center"
        android:textSize="16sp"
        android:text="@string/default_calories"/>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/preparationTimeIcon"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="?android:attr/listDivider"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/divider">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Ingredients Section -->
            <TextView
                android:id="@+id/ingredientsHeadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/ingredients_headline"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/unitSwitch"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@id/ingredientsHeadline"
                android:checked="false"
                android:text="@string/ingredients_switch_text_imperial"/>

            <TextView
                android:id="@+id/textViewIngredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ingredientsHeadline"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:text="@string/default_ingredients"/>

            <!-- Instructions Section -->
            <TextView
                android:id="@+id/instructionsHeadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewIngredients"
                android:layout_marginTop="16dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/instructions_headline"/>

            <TextView
                android:id="@+id/instructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/instructionsHeadline"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:text="@string/default_instructions"/>

            <!-- Macro Nutrients Section -->
            <TextView
                android:id="@+id/macroNutrientsHeadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/instructions"
                android:layout_marginTop="16dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/macro_nutrients_headline"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/nutrientSwitch"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@id/macroNutrientsHeadline"
                android:checked="false"
                android:text="@string/nutrient_switch_text_percentage"/>

            <TextView
                android:id="@+id/macroNutrients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/macroNutrientsHeadline"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:text="@string/default_macro_nutrients"/>

            <!-- Vitamins Section -->
            <TextView
                android:id="@+id/vitaminsHeadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/macroNutrients"
                android:layout_marginTop="16dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/vitamins_headline"/>

            <TextView
                android:id="@+id/vitamins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/vitaminsHeadline"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:text="@string/default_vitamins"/>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>